---
import Default from "../layouts/Default.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
import { ABOUT } from "../config";
---

<Default>
  <a href="/">
    <div class="avatar m-auto mt-3 mb-6 block w-1/3 lg:w-1/4">
      <div>
        <img class="mask mask-circle" src="/profile.jpg" alt="profile image" />
      </div>
    </div>
  </a>
  <h1 class="mb-4 text-2xl font-bold text-primary md:text-3xl">About me</h1>
  {ABOUT.data.map((item) => <p class="mb-4 text-lg ">{item.para}</p>)}
  <section class="my-8">
    <h2 class="my-10 text-2xl capitalize text-primary md:text-3xl">Skills</h2>
    <Skills />
  </section>
  <section class="my-8">
    <h1
      id="projects"
      class="my-10 scroll-smooth text-2xl capitalize text-primary md:text-3xl"
    >
      Projects
    </h1>
    <Projects />
  </section>
</Default>
